<div id="beatSelModal" uk-modal>
    <div class="uk-modal-dialog uk-modal-body" uk-overflow-auto>
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="beatSelDiv center">
            <h4>Select the Districts you want to send this message to</h4>
            <p>
                {{#each beats}}
                <h4>{{name}} State</h4>
                {{#each districts}}
                {{name}} ({{d_type}}) <input type="checkbox" class="uk-checkbox" name="beat" value="{{code}}" id="beatBox"><br>
                {{/each}}
                {{/each}}
            </p>
        </div>
    </div>
</div>