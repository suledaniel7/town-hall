<head>
    <link rel="stylesheet" href="/uikit/css/uikit.css">
    <link rel="stylesheet" href="/css/general.css">
    <script src="/js/jquery-3.3.1.js"></script>
    <title>Select District | Town Hall</title>
</head>

<body uk-grid>
    <div class="center-block center full-length uk-width-1-3@m uk-width-2-3@s uk-width-1-1@xs uk-card uk-card-primary uk-card-body">
        <h3 class="uk-card-title center">Select a District for {{j_name}} to report on</h3>
        <div class="uk-card-body">
            {{#each states}}
            <div class="grey-text bold">{{name}}</div>
            <div class="left">
                <div class="grey-text">Federal Constituencies:</div>
                <table>
                    {{#each fed_consts}}
                    <tr>
                        <td><a href="/organisations/select-beat/{{../../o_username}}/{{../../j_username}}/{{code}}">{{name}}</a></td>
                    </tr>
                    {{/each}}
                </table>
            </div>
            <br>
            <div class="left">
                <div class="grey-text">Senatorial Districts:</div>
                <table>
                    {{#each sen_dists}}
                    <tr>
                        <td><a href="/organisations/select-beat/{{../../o_username}}/{{../../j_username}}/{{code}}">{{name}}</a></td>
                    </tr>
                    {{/each}}
                </table>
            </div>
            <br>
            {{/each}}
        </div>
    </div>
</body>